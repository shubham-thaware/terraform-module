pipeline {
    agent any

    parameters {
        string(name: 'account_id', description: 'AWS Account ID')
        string(name: 'environment', defaultValue: 'dev', description: 'Environment to destroy (dev/stage/prod)')
        string(name: 'vpc_name', description: 'VPC name used in resources')
    }

    environment {
        REPO_URL = 'https://github.com/shubham-thaware/terraform-module.git'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', credentialsId: 'github', url: "${REPO_URL}"
            }
        }

        stage('Terraform Init & Destroy') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir("environments/${params.environment}") {
                        sh '''#!/bin/bash
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY

                        terraform init

                        terraform destroy \
                          -var="account_id=${account_id}" \
                          -var="environment=${environment}" \
                          -var="vpc_name=${vpc_name}" \
                          -auto-approve
                        '''
                    }
                }
            }
        }
    }
}
