pipeline {
    agent any

    parameters {
        string(name: 'env', defaultValue: 'dev', description: 'Environment to destroy (dev/stage/prod)')
        string(name: 'vpc_name', description: 'VPC name used in resources')
    }

    environment {
        REPO_URL = 'https://github.com/shubham-thaware/terraform-module.git'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', credentialsId: 'github', url: "${REPO_URL}"
            }
        }

        stage('Terraform Init & Destroy') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-credentials']]) {
                    dir("environments/${params.env}") {
                        sh '''#!/bin/bash
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY

                        terraform init

                        terraform destroy \
                          -var="env=${env}" \
                          -var="vpc_name=${vpc_name}" \
                          -auto-approve
                        '''
                    }
                }
            }
        }
    }
}
